<html>
    <head>
        <title>Homework - Login</title>
        
        <!--CSS-->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" href="/static/css/navigation.css">
        <link rel="stylesheet" href="/static/css/login.css">
        
        <!--Javascript-->
        <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    </head>
    <body>
        <!--Header-->
        <%- include ../header.ejs %>
        <div class="logincontanier">
            <p><strong><%- infomation %></strong></p>
            <h1>Login Page</h1>
            <form method="POST">
                <div id="usernamecontainer">
                    <label id="usernamelabel" for="username"><b>Username</b></label>
                    <input type="text" name="username" required>
                </div>
                <div id="passwordcontainer">
                    <label id="passwordlabel" for="password"><b>Password</b></label>
                    <input type="password" name="password" required>
                </div>
                <input type="submit" value="Login">
            </form>
            <a href="/app/auth/google">
                <img src="/static/img/googleSignIn.png">
            </a>
            <p>Don't have an account? <a href="/app/signup/">Sign Up</a></p>
            <p>Forgot your Password? <a href="/app/user/forgot">Click Here</a></p>
        </div>
    </body>
</html>